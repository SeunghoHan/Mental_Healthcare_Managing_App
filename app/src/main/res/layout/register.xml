<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/rg_butterfly_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_butterfly" />

        <TextView
            android:id="@+id/rg_title_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rg_butterfly_img"
            android:layout_toRightOf="@+id/rg_butterfly_img"
            android:text="마음"
            android:textAllCaps="false"
            android:textColor="@color/lg_title"
            android:textSize="@dimen/lg_title"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/rg_title_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rg_butterfly_img"
            android:layout_below="@+id/rg_butterfly_img"
            android:layout_marginLeft="18dp"
            android:text="연습실"
            android:textColor="@color/lg_title"
            android:textSize="@dimen/lg_title"
            android:textStyle="normal|bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/rg_account_input_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lg_account" />

        <EditText
            android:id="@+id/rg_account_input_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/rg_account_input_img"
            android:background="@drawable/lg_text_box_roundcorner"
            android:ems="14"
            android:hint="아이디"
            android:inputType="textPersonName"
            android:textColor="@color/lg_text_box_fond_color"
            android:textColorHint="@color/lg_text_box_hint_color"
            android:textSize="@dimen/lg_text_box_font_size" />

        <ImageView
            android:id="@+id/rg_password_input_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/rg_account_input_tf"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lg_password" />

        <EditText
            android:id="@+id/rg_password_input_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_account_input_tf"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/rg_password_input_img"
            android:background="@drawable/lg_text_box_roundcorner"
            android:ems="14"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:textColor="@color/lg_text_box_fond_color"
            android:textColorHint="@color/lg_text_box_hint_color"
            android:textSize="@dimen/lg_text_box_font_size" />

        <ImageView
            android:id="@+id/rg_password_reinput_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/rg_password_input_tf"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/lg_password" />

        <EditText
            android:id="@+id/rg_password_reinput_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rg_password_input_tf"
            android:layout_toRightOf="@+id/rg_password_reinput_img"
            android:background="@drawable/lg_text_box_roundcorner"
            android:ems="14"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            android:textColor="@color/lg_text_box_fond_color"
            android:textColorHint="@color/lg_text_box_hint_color"
            android:textSize="@dimen/lg_text_box_font_size" />

        <Button
            android:id="@+id/rg_register_check_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/rg_password_reinput_tf"
            android:layout_below="@+id/rg_password_reinput_tf"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector_for_login"
            android:text="등록"
            android:textColor="@android:color/white"
            android:textSize="@dimen/lg_btn_font_size" />

        <Button
            android:id="@+id/rg_back_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/rg_password_reinput_tf"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/rg_register_check_btn"
            android:background="@drawable/button_selector_for_login"
            android:text="뒤로"
            android:textColor="@android:color/white"
            android:textSize="@dimen/lg_btn_font_size" />
    </RelativeLayout>


</RelativeLayout>